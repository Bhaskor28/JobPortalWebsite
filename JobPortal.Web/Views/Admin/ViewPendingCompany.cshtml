@using JobPortal.Application.Pending
@model PendingCompanyVM
@{
    ViewData["Title"] = "Company Details";
}

<section class="pt-4 pb-4">
    <div class="container">
        <div class="card p-4 shadow-sm">
            <h3 class="mb-3">📄 Company Details</h3>

            <div class="row">
                <div class="col-md-3">
                    <img src="/images/demo-logo1.png" class="img-fluid rounded mb-3" alt="Company Logo" />
                </div>
                <div class="col-md-9">
                    <p><strong>Name:</strong> @Model.Name</p>
                    <p><strong>Email:</strong> @Model.Email</p>
                    <p><strong>Status:</strong> <span class="badge bg-warning">@Model.Status</span></p>
                    <p><strong>Description:</strong> @Model.About</p>
                    <p><strong>Registered On:</strong> @Model.CreatedAt.ToString("dd MMM yyyy")</p>
                </div>
            </div>

            <div class="mt-4">
                <a asp-action="Dashboard" asp-controller="Admin" class="btn btn-secondary">Back</a>
            </div>
        </div>
    </div>
</section>
