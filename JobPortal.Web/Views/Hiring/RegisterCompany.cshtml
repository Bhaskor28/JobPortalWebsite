@using JobPortal.Application.Companies
@model CompanyVM
<section class="job-post-company pt-120 pb-120">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-8 col-lg-10">
                <div class="card p-4">
                    <div class="card-body">
                        <h3 class="text-center mb-4">🏢 Register a New Company</h3>

                        <form enctype="multipart/form-data" method="post">

                            <div class="row g-3">

                                <!-- Company Name -->
                                <div class="col-12">
                                    <label asp-for="Name" class="form-label">Company Name</label>
                                    <input asp-for="Name" type="text" class="form-control" value="Creative Agency">
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>

                                <!-- Website -->
                                <div class="col-md-6">
                                    <label asp-for="Website" class="form-label">Website</label>
                                    <input asp-for="Website" type="url" class="form-control" value="https://creativeagency.com">
                                    <span asp-validation-for="Website" class="text-danger"></span>
                                </div>

                                <!-- Email -->
                                <div class="col-md-6">
                                    <label asp-for="Email" class="form-label">Contact Email</label>
                                    <input asp-for="Email" type="email" class="form-control" value="info@creativeagency.com">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <!-- Phone -->
                                <div class="col-md-6">
                                    <label asp-for="Phone" class="form-label">Phone Number</label>
                                    <input asp-for="Phone" type="text" class="form-control" value="+8801722222222">
                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                </div>

                                <!-- Address -->
                                <div class="col-md-6">
                                    <label asp-for="Address" class="form-label">Address</label>
                                    <input asp-for="Address" type="text" class="form-control" value="Banani, Dhaka">
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>

                                <!-- Company Size -->
                                <div class="col-md-6">
                                    <label class="form-label">Company Size</label>
                                    <select asp-for="CompanySize" class="form-select">
                                        <option selected>11–50 Employees</option>
                                        <option>1–10 Employees</option>
                                        <option>51–200 Employees</option>
                                        <option>200+ Employees</option>
                                    </select>
                                    <span asp-validation-for="CompanySize" class="text-danger"></span>
                                </div>

                                <!-- Logo Upload -->
                                <div class="col-md-6">
                                    <label asp-for="LogoPath" class="form-label">Upload Logo</label>
                                    <input asp-for="LogoPath" class="form-control w-200" type="file" id="formFile">
                                </div>



                                <!-- About Company -->
                                <div class="col-12">
                                    <label asp-for="About" class="form-label">About Company</label>
                                    <textarea asp-for="About" class="form-control" rows="4">We are a creative team focused on branding and digital marketing solutions.</textarea>
                                    <span asp-validation-for="About" class="text-danger"></span>
                                </div>

                            </div>

                            <div class="d-flex justify-content-end mt-4">
                                <button type="submit" class="btn btn-primary btn-lg">Register Company</button>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
